@{
    Layout = "~/Shared/_Layout.cshtml";

    var Date = DateTime.Now;
    var db = WebMatrix.Data.Database.Open("MegaDesk");
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <fieldset>
        <legend>Create a Desk</legend>
        <form method="post">
            <p>
                <label for="width">Width: </label>
                <input type="number" max="96" min="24" name="width" value="@Request.Form["width"]" />
            </p>
            <p>
                <label for="depth">Depth: </label>
                <input type="number" max="48" min="12" name="depth" value="@Request.Form["depth"]" />
            </p>
            <p>
                <label for="drawers">Number of Drawers: </label>
                <input type="number" max="7" min="0" name="drawers" value="@Request.Form["number_of_drawers"]" />
            </p>
            <p>
                <label for="material">Surface Material: </label>
                @Html.DropDownList("material", Enum.GetValues(typeof(MegaDeskWeb.SurfaceMaterial)).Cast<MegaDeskWeb.SurfaceMaterial>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }).ToList())
            </p>
            <p>
                <label for="customer_name">Name: </label>
                <input type="text" name="customer_name" value=@Request.Form["customer_name"] />
            </p>
            <p>
                <label for="date">Date: </label>
                <input type="text" name="date" value="@Date" readonly />
            </p>
            <input type="submit" name="checkQuoteButton" value="Review and Submit" />
        </form>
    </fieldset>
</body>
</html>
